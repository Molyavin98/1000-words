<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".learning_words.MenuLearningWordsActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="@dimen/btn_back"
        android:layout_height="@dimen/btn_back"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_style_menu"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/arrow_left"/>

    <TextView
        android:id="@+id/textLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_lesson"
        android:textSize="26sp"
        android:textStyle="italic|bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gridLayout">
    </TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/bookshelf"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/textLesson"
        app:layout_constraintTop_toTopOf="@id/textLesson"
        app:layout_constraintBottom_toBottomOf="@id/textLesson">
    </ImageView>

  <GridLayout
      android:id="@+id/gridLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="5dp"
      android:rowCount="2"
      android:columnCount="5"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/textLesson"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">


            <Button
                android:id="@+id/les1"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:background="@drawable/btn_style_menu"
                android:text="1"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="0">
            </Button>

      <Button
          android:id="@+id/les2"
          android:layout_width="@dimen/btn_menu"
          android:layout_height="@dimen/btn_menu"
          android:layout_row="0"
          android:layout_column="1"
          android:layout_margin="5dp"
          android:background="@drawable/btn_style_menu"
          android:text="2"
          android:textSize="@dimen/text_size_menu"
          android:textStyle="bold">
      </Button>

            <Button
                android:id="@+id/les3"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:background="@drawable/btn_style_menu"
                android:text="3"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="2">
            </Button>

            <Button
                android:id="@+id/les4"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:background="@drawable/btn_style_menu"
                android:text="4"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="3">
            </Button>

            <Button
                android:id="@+id/les5"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:background="@drawable/btn_style_menu"
                android:text="5"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="4">
            </Button>

            <Button
                android:id="@+id/les6"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_style_menu"
                android:text="6"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="0">
            </Button>

            <Button
                android:id="@+id/les7"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_style_menu"
                android:text="7"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="1">
            </Button>

            <Button
                android:id="@+id/les8"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_style_menu"
                android:text="8"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="2">
            </Button>

            <Button
                android:id="@+id/les9"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_style_menu"
                android:text="9"
                android:layout_margin="5dp"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="3">
            </Button>

            <Button
                android:id="@+id/les10"
                android:layout_width="@dimen/btn_menu"
                android:layout_height="@dimen/btn_menu"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_style_menu"
                android:layout_margin="5dp"
                android:text="10"
                android:textSize="@dimen/text_size_menu"
                android:textStyle="bold"
                android:layout_row="1"
                android:layout_column="4">
            </Button>


  </GridLayout>

            <Button
                android:id="@+id/btnLearningSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style_menu"
                android:text="@string/learning_select_words"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="@id/gridLayout"
                app:layout_constraintStart_toStartOf="@id/gridLayout"
                app:layout_constraintTop_toBottomOf="@id/gridLayout">
            </Button>

    <Button
        android:id="@+id/btnWorkMistakes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style_menu"
        android:text="@string/work_on_mistakes"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@id/btnLearningSelect"
        app:layout_constraintStart_toStartOf="@id/btnLearningSelect"
        app:layout_constraintTop_toBottomOf="@id/btnLearningSelect">
    </Button>

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_style_menu"
        android:src="@drawable/lock"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@id/btnWorkMistakes"
        app:layout_constraintStart_toStartOf="@id/btnWorkMistakes"
        app:layout_constraintTop_toBottomOf="@id/btnWorkMistakes">
    </ImageButton>

    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_style_menu"
        android:src="@drawable/lock"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@id/btnWorkMistakes"
        app:layout_constraintStart_toStartOf="@id/btnWorkMistakes"
        app:layout_constraintTop_toBottomOf="@id/btn1">
    </ImageButton>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6890166018762231/4460626824"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent">
    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>